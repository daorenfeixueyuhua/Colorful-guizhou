<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="true">
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] %5p %c{1} - %m%n" />
		</layout>
	</appender>
	<appender name="rollFile" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/-pipe-network-manager.log"/>
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] %5p %c{1} - %m%n"/>
		</layout>
	</appender>

	<logger name="org.springframework">
		<level value="WARN"/>
	</logger>

	<logger name="com.gznu.element">
		<level value="INFO"/>
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="rollFile"/>
	</logger>
	<logger name="org.apache.shiro" additivity="false">
		<level value="DEBUG"/>
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="rollFile"/>
	</logger>
	
	<!-- <root>
		<level value="WARN" />
	</root> -->
</log4j:configuration>
